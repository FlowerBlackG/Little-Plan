<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gardilily.littleplan">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.LittlePlan.PrimaryGradient"
        android:name=".tools.SharedData">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.EditTodoActivity" />
        <activity android:name=".activity.IntegerEditActivity" />
        <activity android:name=".activity.DetailEditActivity" />
        <activity android:name=".activity.About" />
        <activity android:name=".activity.ChangeTheme" />
        <activity android:name=".activity.cloudservice.Home" />
        <activity android:name=".activity.cloudservice.Login" />
        <activity android:name=".activity.cloudservice.ChangePW" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
